<mah:MetroWindow x:Class="InteractiveSeven.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:InteractiveSeven"
        mc:Ignorable="d"
        Title="DebugWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Game Moment: " />
            <TextBlock Text="{Binding Path=GameMoment}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="ActiveBattle: " />
            <TextBlock Text="{Binding Path=PartyStatus.ActiveBattle}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="BattleEnding: " />
            <TextBlock Text="{Binding Path=PartyStatus.BattleEnding}" />
        </StackPanel>
    </StackPanel>
</mah:MetroWindow>
