                                <mah:NumericUpDown Grid.Row="3" Grid.Column="0" Width="75" Minimum="0" Interval="10" StringFormat="N0"
                                            IsEnabled="{Binding AllowEsunaCommand}" Value="{Binding Path=EsunaCost, Mode=TwoWay}" />
                                <Label Grid.Row="3" Grid.Column="1" Content="Esuna Gil Cost" FontSize="12" Margin="5,0,0,0" />

                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Status Effects" Margin="5">

                            <DataGrid ItemsSource="{Binding AllStatusEffects}"
                                      CanUserAddRows="False" CanUserSortColumns="False"
                                      AutoGenerateColumns="False" CanUserReorderColumns="False"
                                      IsEnabled="{Binding AllowStatusEffects}">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="Enabled"
                                                            ElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                                            EditingElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                                            Binding="{Binding Path=Enabled, Mode=TwoWay}" />
                                    <DataGridTextColumn Width="Auto" Header="Name" Binding="{Binding Name}" IsReadOnly="True" />
                                    <mah:DataGridNumericUpDownColumn Header="Cost" Width="60"
                                                                     Binding="{Binding Path=Cost, Mode=TwoWay}"
                                                                     StringFormat="N0" Minimum="0" Interval="10" Maximum="2000000000"/>
                                    <mah:DataGridNumericUpDownColumn Header="Cure Cost" Width="60"
                                                                     Binding="{Binding Path=CureCost, Mode=TwoWay}"
                                                                     StringFormat="N0" Minimum="0" Interval="10" Maximum="2000000000"/>
                                    <DataGridTextColumn Width="Auto" Header="Command Words"
                                                        Binding="{Binding Path=Words, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </GroupBox>

                    </DockPanel>
                </ScrollViewer>
            </TabItem>


            <TabItem DataContext="{Binding Settings.TsengSettings}">
                <TabItem.Header>
                    <StackPanel Style="{StaticResource TabHeaderStyle}">
                        <iconPacks:PackIconModern Margin="2 0 4 0" Kind="PeopleStatus" />
                        <TextBlock Text="Tseng" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <GroupBox Header="Tseng Party Status Tracking Settings" Margin="5">
                            <Grid Margin="5,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <mah:NumericUpDown Grid.Row="0" Grid.Column="0" Width="75" Minimum="0"
                                                   Interval="10" Maximum="65535"
                                                   Value="{Binding Path=PortNumber, Mode=TwoWay}" />
                                <Label Grid.Row="0" Grid.Column="1" Content="Port Number *requires restart to take effect" FontSize="12" Margin="5,0,0,0" />

                                <mah:NumericUpDown Grid.Row="1" Grid.Column="0" Width="75" Minimum="100"
                                                   Interval="10" Maximum="600000"
                                                   Value="{Binding Path=MemoryReadIntervalInMs, Mode=TwoWay}" />
                                <Label Grid.Row="1" Grid.Column="1" Content="Basic Memory Read Interval in MS" FontSize="12" Margin="5,0,0,0" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </DockPanel>
</mah:MetroWindow>
