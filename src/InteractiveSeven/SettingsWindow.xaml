<mah:MetroWindow x:Class="InteractiveSeven.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractiveSeven"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:converters="http://metro.mahapps.com/winfx/xaml/shared"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        RenderOptions.ClearTypeHint="Enabled"
        TextOptions.TextFormattingMode="Display"
        Title="I7 Settings"
        SizeToContent="WidthAndHeight"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        ResizeMode="CanResizeWithGrip">
    <mah:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content, Converter={converters:ToUpperConverter}}"
                       TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center"
                       Margin="8 -1 0 0"
                       FontSize="{DynamicResource MahApps.Sizes.Font.WindowTitle}"
                       FontFamily="{DynamicResource MahApps.Fonts.Default}" />
        </DataTemplate>
    </mah:MetroWindow.TitleTemplate>

    <DockPanel>
        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Save Settings" Command="{Binding Path=SaveSettingsCommand}"
                                        Width="150" Padding="0,10,0,10" Margin="0,10,30,10" />
            <Button Content="Load Settings" Command="{Binding Path=LoadSettingsCommand}"
                                        Width="150" Padding="0,10,0,10" Margin="30,10,0,10" />
        </StackPanel>

        <TabControl DataContext="{Binding}">


            <TabItem DataContext="{Binding Settings}">
                <TabItem.Header>
                    <StackPanel Style="{StaticResource TabHeaderStyle}">
                        <iconPacks:PackIconMaterial Margin="2 0 4 0" Kind="ApplicationSettings" />
                        <TextBlock Text="General" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel Orientation="Vertical" Margin="5,5,0,5">
                        <GroupBox Header="FF7 Process Info" Margin="5">
                            <StackPanel Orientation="Vertical" Margin="0 10 0 10">
                                <Label Content="FF7 Process Name (without .exe)" FontSize="16" Margin="5,0,0,0" />
                                <TextBox Width="200" VerticalContentAlignment="Bottom" HorizontalAlignment="Right"
                                         Text="{Binding Path=ProcessName, Mode=TwoWay}" mah:TextBoxHelper.Watermark="Example: ff7_en" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Temporary Settings" Margin="5">
                            <mah:ToggleSwitch Header="Allow Game Affecting Commands" Margin="0 10 0 10"
                                              OnContent="Allowed" OffContent="Not Allowed"
                                              IsOn="{Binding Path=AllowGameAffectingCommands, Mode=TwoWay}" />
                        </GroupBox>

                        <GroupBox Header="Mod Settings (General)" Margin="5">
                            <StackPanel Orientation="Vertical">
                                <mah:ToggleSwitch Header="Allow Mods to Give Bonus Bits" Margin="0 10 0 10"
                                                  OnContent="Allowed" OffContent="Not Allowed"
                                                  IsOn="{Binding Path=ModsGiveBonusBits, Mode=TwoWay}" />

                                <mah:ToggleSwitch Header="Enable Mod Command (!i7)" Margin="0 10 0 10"
                                                  OnContent="Enabled" OffContent="Disabled"
                                                  IsOn="{Binding Path=EnableModCommand, Mode=TwoWay}" />

                            </StackPanel>

                        </GroupBox>

                        <GroupBox Header="Subscription Bonus" Margin="5">
                            <StackPanel Orientation="Vertical">
                                <mah:ToggleSwitch Header="Enable Subscriber Bonus Bits" Margin="0 10 0 10"
                                                  OnContent="Give Bonus" OffContent="No Bonus"
                                                  IsOn="{Binding Path=GiveSubscriberBonusBits, Mode=TwoWay}" />

                                <StackPanel Orientation="Vertical" Margin="0 10 0 10">
                                    <Label Content="Bonus Bits for Subscribers" FontSize="12" Margin="5,0,0,0"/>
                                    <mah:NumericUpDown VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                                       IsEnabled="{Binding Path=GiveSubscriberBonusBits}"
                                                       Value="{Binding Path=SubscriberBonusBits, Mode=TwoWay}"
                                                       Width="90" Minimum="0" Interval="10" StringFormat="N0" />
                                </StackPanel>

                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <TabItem DataContext="{Binding TwitchSettings}">
                <TabItem.Header>
                    <StackPanel Style="{StaticResource TabHeaderStyle}">
                        <iconPacks:PackIconFontAwesome Margin="2 0 4 0" Kind="TwitchBrands" />
                        <TextBlock Text="Twitch" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <GroupBox Header="Twitch OAuth Settings" Margin="10">
                            <Grid Margin="5,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Content="Bot Username" FontSize="12" Margin="5,10,0,0" />
                                <TextBox Grid.Row="0" Grid.Column="1" Width="300" VerticalContentAlignment="Center" HorizontalAlignment="Left"
                                        Text="{Binding Path=Username, Mode=TwoWay}" mah:TextBoxHelper.Watermark="Example: DevChatterBot" Margin="5,10,0,0" />

                                <Label Grid.Row="1" Grid.Column="0" Content="Twitch Channel" FontSize="12" Margin="5,10,0,0" />
                                <TextBox Grid.Row="1" Grid.Column="1" Width="300" VerticalContentAlignment="Center" HorizontalAlignment="Left"
                                                                  Text="{Binding Path=Channel, Mode=TwoWay}" mah:TextBoxHelper.Watermark="Example: DevChatter" Margin="5,10,0,0" />

                                <Label Grid.Row="2" Grid.Column="0" Content="Access Token" FontSize="12" Margin="5,10,0,0" />
                                <xctk:WatermarkPasswordBox Grid.Row="2" Grid.Column="1" Width="300" VerticalContentAlignment="Center" HorizontalAlignment="Left"
                                        PasswordChanged="AccessTokenTextBox_PasswordChanged" mah:TextBoxHelper.Watermark="Example: oauth:abcdefghijklmnopqrstuvwxyz" Margin="5,10,0,0" />

                            </Grid>

                        </GroupBox>
                        <GroupBox Header="Refresh Twitch OAuth Settings" Margin="10">
                            <StackPanel Orientation="Vertical" Margin="5 10 5 10">
                                <Button Content="Log in to Twitch" Width="200"
                                        Command="{Binding Path=DataContext.OpenTwitchAuthWindowCommand, RelativeSource={RelativeSource AncestorType={x:Type local:SettingsWindow}}}"
                                        Margin="2" VerticalAlignment="Center" Padding="4" HorizontalAlignment="Left" />

                                <Label Visibility="{Binding UpdatedFromTwitch, Converter={StaticResource BoolToHiddenConverter}}"
                                       Content="Updated OAuth from Twitch. Be sure to save changes!"
                                       FontSize="18" FontStyle="Italic" Foreground="{DynamicResource MahApps.Brushes.ValidationSummary1}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <TabItem DataContext="{Binding Settings.MenuSettings}">
                <TabItem.Header>
                    <StackPanel Style="{StaticResource TabHeaderStyle}">
                        <iconPacks:PackIconEvaIcons Margin="2 0 4 0" Kind="ColorPalette" />
                        <TextBlock Text="Menu Color" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <GroupBox Header="General Menu Color Settings" Margin="5">

                            <Grid Margin="5,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                            IsChecked="{Binding Path=Enabled, Mode=TwoWay}" />
                                <Label Grid.Row="0" Grid.Column="1" Content="Enable Menu Color Command" FontSize="12" Margin="5,0,0,0"/>

                                <CheckBox Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                            IsEnabled="{Binding Enabled}" IsChecked="{Binding Path=AllowModOverride, Mode=TwoWay}" />
                                <Label Grid.Row="1" Grid.Column="1" Content="Allow Mod Override" FontSize="12" Margin="5,0,0,0" />

                                <CheckBox Grid.Row="2" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                            IsEnabled="{Binding Enabled}" IsChecked="{Binding Path=TransitionColors, Mode=TwoWay}" />
                                <Label Grid.Row="2" Grid.Column="1" Content="Smooth Color Transitions (instead of instant change)" FontSize="12" Margin="5,0,0,0" />

                                <mah:NumericUpDown Grid.Row="3" Grid.Column="0" Width="90" Minimum="0" Interval="10" StringFormat="N0"
                                                               IsEnabled="{Binding Enabled}" Value="{Binding Path=BitCost, Mode=TwoWay}" />
                                <Label Grid.Row="3" Grid.Column="1" Content="Minimum Bits Required" FontSize="12" Margin="5,0,0,0" />

                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Color Palettes" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox Grid.Row="0" Grid.Column="0"
                                          VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=EnablePaletteCommand, Mode=TwoWay}" />
                                <Label Grid.Row="0" Grid.Column="1"
                                       Content="Enable Palette Command"
                                       FontSize="12" Margin="5,0,0,0" />

                                <CheckBox Grid.Row="1" Grid.Column="0"
                                          VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsEnabled="{Binding EnablePaletteCommand}"
                                          IsChecked="{Binding Path=AllowModsToCreatePalettes, Mode=TwoWay}" />
                                <Label Grid.Row="1" Grid.Column="1"
                                       Content="Allow Mods to Create Palettes"
                                       FontSize="12" Margin="5,0,0,0" />
                            </Grid>

                        </GroupBox>

                        <GroupBox Header="Rainbow Mode" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox Grid.Row="0" Grid.Column="0"
                                          VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=EnableRainbowCommand, Mode=TwoWay}" />
                                <Label Grid.Row="0" Grid.Column="1" Content="Enable Rainbow Mode"
                                       FontSize="12" Margin="5,0,0,0" />

                                <mah:NumericUpDown Grid.Row="1" Grid.Column="0"
                                                   Width="90" Minimum="0" Interval="10" StringFormat="N0"
                                                   IsEnabled="{Binding EnableRainbowCommand}"
                                                   Value="{Binding Path=RainbowModeCost, Mode=TwoWay}" />
                                <Label Grid.Row="1" Grid.Column="1" Content="Rainbow Mode Cost"
                                       FontSize="12" Margin="5,0,0,0" />

                                <mah:NumericUpDown Grid.Row="2" Grid.Column="0"
                                                   Width="90" Minimum="0" Interval="10" StringFormat="N0"
                                                   IsEnabled="{Binding EnableRainbowCommand}"
                                                   Value="{Binding Path=RainbowModeIterations, Mode=TwoWay}" />
                                <Label Grid.Row="2" Grid.Column="1"
                                       Content="Rainbow Mode Iterations (number of transitions)"
                                       FontSize="12" Margin="5,0,0,0" />
                            </Grid>

                        </GroupBox>

                        <GroupBox Header="Mako Mode" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>


                                <CheckBox Grid.Row="0" Grid.Column="0"
                                          VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=EnableMakoCommand, Mode=TwoWay}" />
                                <Label Grid.Row="0" Grid.Column="1"
                                       Content="Enable Mako Mode"
                                       FontSize="12" Margin="5,0,0,0" />

                                <mah:NumericUpDown Grid.Row="1" Grid.Column="0"
                                                   Width="90" Minimum="0" Interval="10" StringFormat="N0"
                                                   IsEnabled="{Binding EnableMakoCommand}"
                                                   Value="{Binding Path=MakoModeCost, Mode=TwoWay}" />
                                <Label Grid.Row="1" Grid.Column="1"
                                       Content="Mako Mode Cost"
                                       FontSize="12" Margin="5,0,0,0" />

                                <mah:NumericUpDown Grid.Row="2" Grid.Column="0"
                                                   Width="90" Minimum="0" Interval="10" StringFormat="N0"
                                                   IsEnabled="{Binding EnableMakoCommand}"
                                                   Value="{Binding Path=MakoModeIterations, Mode=TwoWay}" />
                                <Label Grid.Row="2" Grid.Column="1"
                                       Content="Mako Mode Iterations (number of transitions)"
                                       FontSize="12" Margin="5,0,0,0" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <TabItem DataContext="{Binding Settings.NameBiddingSettings}">
                <TabItem.Header>
                    <StackPanel Style="{StaticResource TabHeaderStyle}">
                        <iconPacks:PackIconMaterial Margin="2 0 4 0" Kind="AccountEdit" />
                        <TextBlock Text="Name Bidding" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <DockPanel>
                        <Grid Margin="5,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <CheckBox Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                            IsChecked="{Binding Path=Enabled, Mode=TwoWay}" />
                            <Label Grid.Row="0" Grid.Column="1" Content="Enable Naming Commands" FontSize="12" Margin="5,0,0,0"/>

                            <mah:NumericUpDown Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                            Value="{Binding Path=DefaultStartBits, Mode=TwoWay}"  Width="50" Minimum="0" Interval="10" StringFormat="N0" />
                            <Label Grid.Row="1" Grid.Column="1" Content="Default Name Starting Bits" FontSize="12" Margin="5,0,0,0"/>

                            <CheckBox Grid.Row="2" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                            IsChecked="{Binding Path=AllowModeration, Mode=TwoWay}" />
                            <Label Grid.Row="2" Grid.Column="1" Content="Enable Moderation of Names" FontSize="12" Margin="5,0,0,0"/>

                            <CheckBox Grid.Row="3" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                            IsChecked="{Binding Path=AllowModBits, Mode=TwoWay}" />
                            <Label Grid.Row="3" Grid.Column="1" Content="Enable Mod Override - Free Bits" FontSize="12" Margin="5,0,0,0"/>

                            <CheckBox Grid.Row="4" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingCloudEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="4" Grid.Column="1" Content="Allow Naming Cloud" FontSize="12" Margin="5,0,0,0" />

                            <CheckBox Grid.Row="5" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingBarretEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="5" Grid.Column="1" Content="Allow Naming Barret" FontSize="12" Margin="5,0,0,0" />

                            <CheckBox Grid.Row="6" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingTifaEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="6" Grid.Column="1" Content="Allow Naming Tifa" FontSize="12" Margin="5,0,0,0" />

                            <CheckBox Grid.Row="7" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingAerisEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="7" Grid.Column="1" Content="Allow Naming Aeris" FontSize="12" Margin="5,0,0,0" />

                            <CheckBox Grid.Row="8" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingCaitSithEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="8" Grid.Column="1" Content="Allow Naming Cait Sith" FontSize="12" Margin="5,0,0,0" />

                            <CheckBox Grid.Row="9" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingCidEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="9" Grid.Column="1" Content="Allow Naming Cid" FontSize="12" Margin="5,0,0,0" />

                            <CheckBox Grid.Row="10" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingRedEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="10" Grid.Column="1" Content="Allow Naming Red XIII" FontSize="12" Margin="5,0,0,0" />

                            <CheckBox Grid.Row="11" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingVincentEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="11" Grid.Column="1" Content="Allow Naming Vincent" FontSize="12" Margin="5,0,0,0" />

                            <CheckBox Grid.Row="12" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                          IsChecked="{Binding Path=NamingYuffieEnabled, Mode=TwoWay}" />
                            <Label Grid.Row="12" Grid.Column="1" Content="Allow Naming Yuffie" FontSize="12" Margin="5,0,0,0" />
                        </Grid>
                    </DockPanel>
                </ScrollViewer>
            </TabItem>


            <TabItem DataContext="{Binding Settings.CommandSettings}">
                <TabItem.Header>
                    <StackPanel Style="{StaticResource TabHeaderStyle}">
                        <iconPacks:PackIconFeatherIcons Margin="2 0 4 0" Kind="Terminal" />
                        <TextBlock Text="Command" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <GroupBox Header="Command Settings" Margin="5">

                            <Grid Margin="5,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0" Content="Costs Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=CostsCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="1" Grid.Column="0" Content="Balance Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=BalanceCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="2" Grid.Column="0" Content="Give Gil Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=GiveGilCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="3" Grid.Column="0" Content="Remove Gil Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=RemoveGilCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="4" Grid.Column="0" Content="I7 Mod Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="4" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=I7CommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="5" Grid.Column="0" Content="Menu Color Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="5" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=MenuCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="6" Grid.Column="0" Content="Name Bids Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="6" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=NameBidsCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="7" Grid.Column="0" Content="Refresh Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="7" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=RefreshCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="8" Grid.Column="0" Content="Help Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="8" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=HelpCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="9" Grid.Column="0" Content="Weapon Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="9" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=WeaponCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="10" Grid.Column="0" Content="Armlet Command Words" FontSize="12" Margin="5,10,0,0" />
                                <TextBox  Grid.Row="10" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                Text="{Binding Path=ArmletCommandWords, Mode=TwoWay, Converter={StaticResource CommandWordsValueConverter}}"
                                                mah:TextBoxHelper.Watermark="Add words separated by commas" Margin="5,10,10,0" />

                                <Label Grid.Row="11" Grid.Column="0" Content="Accessory Command Words" FontSize="12" Margin="5,10,0,0" />
